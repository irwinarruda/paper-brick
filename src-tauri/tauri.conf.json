{
  "$schema": "https://github.com/tauri-apps/tauri/releases/download/tauri-build-v2.0.0-beta.13/schema.json",
  "productName": "Paper Brick",
  "version": "0.0.0",
  "identifier": "com.irwinarruda.paper-brick",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {},
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": "http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/**"
        ]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "main",
        "width": 580,
        "height": 165,
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ]
  }
}
