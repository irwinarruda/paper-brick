{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Paper Brick",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "dialog": {
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["$HOME/**"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$HOME/**"]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.irwinarruda.paper-brick",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "paper-brick",
        "width": 580,
        "height": 270,
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "tray/icon-tray.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}
